<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600" minWidth="700" style="-fx-background-color: #f7f7f7;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smohtadi.finView.Main">
    <MenuBar style="-fx-background-color: #fff;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <menus>
            <Menu mnemonicParsing="false" text="Archivo">
                <items>
                    <MenuItem mnemonicParsing="false" text="Inicio" onAction="#onClickInicio" />
                    <MenuItem mnemonicParsing="false" text="Cerrar" onAction="#onClickClose" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Editar">
                <items>
                    <MenuItem mnemonicParsing="false" text="Producto" onAction="#onClickEditProducto" />
                    <MenuItem mnemonicParsing="false" onAction="#onClickEditProveedor" text="Proveedor" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Crear">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#onClickCreateProduct" text="Producto" />
                    <MenuItem mnemonicParsing="false" onAction="#onClickCreateProveedor" text="Proveedor" />
                    <MenuItem mnemonicParsing="false" onAction="#onClickCreateFactura" text="Factura" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Informes">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#onClickInformeCredito" text="Credito" />
                    <MenuItem mnemonicParsing="false" onAction="#onClickInformeCompras" text="Compras" />
                </items>
