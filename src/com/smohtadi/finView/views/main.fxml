            <AnchorPane minHeight="0.0" minWidth="0.0">
                <children>
                    <AnchorPane fx:id="mainCenterPane" style="-fx-background-color: #fff;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </children>
            </AnchorPane>
        </content>
    </ScrollPane>
</AnchorPane>
